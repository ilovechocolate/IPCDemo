<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    app:layoutDescription="@xml/activity_demo_scene">

    <TextView
        android:id="@+id/aidl_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:text="test"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aidl_bind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="bindService"
            android:padding="10dp"
            android:text="绑定服务" />

        <Button
            android:id="@+id/aidl_unbind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="unbindService"
            android:padding="10dp"
            android:text="解绑服务" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aidl_test_int"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="testInt"
            android:padding="10dp"
            android:text="测试整数传值" />

        <TextView
            android:id="@+id/aidl_int_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aidl_test_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="testString"
            android:padding="10dp"
            android:text="测试字符串传值" />

        <TextView
            android:id="@+id/aidl_str_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="TextView" />
    </LinearLayout>

    <Button
        android:id="@+id/aidl_test_bean_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="testBeanIn"
        android:padding="10dp"
        android:text="测试自定义结构传输 - in" />

    <Button
        android:id="@+id/aidl_test_bean_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="testBeanOut"
        android:padding="10dp"
        android:text="测试自定义结构传输 - out" />

    <Button
        android:id="@+id/aidl_test_bean_inout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="testBeanInout"
        android:padding="10dp"
        android:text="测试自定义结构传输 - inout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aidl_test_callback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="testCallback"
            android:padding="10dp"
            android:text="测试回调传输" />

        <TextView
            android:id="@+id/aidl_callback_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="TextView" />
    </LinearLayout>

</LinearLayout>